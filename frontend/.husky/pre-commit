echo "Running pre-commit checks..."
echo ""

# Check linting
echo "Running ESLint..."
if ! npm run lint; then
  echo ""
  echo "❌ COMMIT FAILED: Linting errors detected!"
  echo "🔧 Please fix the linting errors above and try again."
  echo ""
  exit 1
fi
echo "✅ Linting passed!"
echo ""

# Check formatting
echo "Checking code formatting..."
if ! npm run format-check; then
  echo ""
  echo "❌ COMMIT FAILED: Code formatting issues detected!"
  echo "🔧 Please run 'npm run format' to fix formatting issues and try again."
  echo ""
  exit 1
fi
echo "✅ Formatting check passed!"
echo ""

# Build check
echo "Building project..."
if ! npm run build; then
  echo ""
  echo "❌ COMMIT FAILED: Build errors detected!"
  echo "🔧 Please fix the build errors above and try again."
  echo ""
  exit 1
fi
echo "✅ Build passed!"
echo ""

echo "🚀 All checks passed! Ready to commit!"